{define sidebar}
	<!-- Main Sidebar Container -->
	<aside class="main-sidebar sidebar-light-blue elevation-4">
		<!-- Brand Logo -->
		<a n:href="Homepage:default" class="brand-link">
			<img src="{$basePath}/assets/cms/img/logo_128.png"
				 alt="Logo"
				 class="brand-image">
			<span class="brand-text font-weight-light">
				{_cms.main.adminTitle}
			</span>
		</a>

		<!-- Sidebar -->
		<div class="sidebar">
			<!-- Sidebar Menu -->
			<nav class="mt-2">
				<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
					data-accordion="false">
					{foreach $cmsMenu as $menu}
						{if $menu->getTitle() !== null}
							<li class="nav-header">{_$menu->getTitle()}</li>
						{/if}
						{foreach $menu->getItems() as $menuItem}
							{if $presenter->checkAccess($menuItem->getRight())}
								<li n:class="nav-item, $menuItem->hasChildren() ? has-treeview, $presenter->isMenuItemActive($menuItem) ? menu-open">
									<a href="{if $menuItem->getRoute() !== null}{plink $menuItem->getRoute()}{else}#{/if}" n:class="nav-link, $presenter->isMenuItemActive($menuItem) ? active">
										<i n:if="$menuItem->getIcon() !== null"
												class="nav-icon {$menuItem->getIcon()}"></i>
										<p>
											{_$menuItem->getTitle()}
											{if $menuItem->getBadgeHandler() !== null}
												{var $badge = $menuItem->getBadgeHandler()->getBadge()}
												{if is_array($badge)}
													<span n:foreach="$badge as $b" n:class="right, badge, $b->getColor()">{$b->getValue()}</span>
												{elseif $badge !== null}
													<span n:class="right, badge, $badge->getColor()">{$badge->getValue()}</span>
												{/if}
											{/if}
										</p>
									</a>
									<ul n:if="$menuItem->hasChildren()" class="nav nav-treeview">
										<li n:foreach="$menuItem->getChildren() as $childItem" n:if="$presenter->checkAccess($childItem->getRight())"
												class="nav-item">
											<a href="{if $childItem->getRoute() !== null}{plink $childItem->getRoute()}{else}#{/if}" n:class="nav-link, $presenter->isMenuItemActive($childItem) ? active">
												<i n:if="$childItem->getIcon() !== null"
														class="nav-icon {$childItem->getIcon()}"></i>
												<p>
													{_$childItem->getTitle()}
                                                        {if $childItem->getBadgeHandler() !== null}
														{var $badge = $childItem->getBadgeHandler()->getBadge()}
														{if is_array($badge)}
															<span n:foreach="$badge as $b" n:class="right, badge, $b->getColor()">{$b->getValue()}</span>
														{elseif $badge !== null}
															<span n:class="right, badge, $badge->getColor()">{$badge->getValue()}</span>
														{/if}
													{/if}
												</p>
											</a>
										</li>
									</ul>
								</li>
							{/if}
						{/foreach}
					{/foreach}
				</ul>
			</nav>
			<!-- /.sidebar-menu -->
		</div>
		<!-- /.sidebar -->
	</aside>
{/define}

{define mainContent}
	<!-- Content Wrapper. Contains page content -->
	<div class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header ml-2 mr-2">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						{include pageTitle}
					</div>
					{ifset breadcrumb}
						<div class="col-sm-6">
							<ol class="breadcrumb float-sm-right">
								{include breadcrumb}
							</ol>
						</div>
					{/ifset}
				</div>
				{snippet flashes}
					<div n:foreach="$flashes as $flash" class="row">
						<div class="col-lg-12">
							{if $flash->type === 'success'}
								<div class="alert alert-dismissible alert-success">
									<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
									<i class="icon fas fa-check fa-fw"></i> {_$flash->message}
								</div>
							{elseif $flash->type === 'warning'}
								<div class="alert alert-dismissible alert-warning">
									<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
									<i class="icon fas fa-exclamation-triangle fa-fw"></i> {_$flash->message}
								</div>
							{elseif $flash->type === 'danger' || $flash->type === 'error'}
								<div class="alert alert-dismissible alert-danger">
									<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
									<i class="icon fas fa-ban fa-fw"></i> {_$flash->message}
								</div>
							{else}
								<div class="alert alert-dismissible alert-info">
									<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
									<i class="icon fas fa-info fa-fw"></i> {_$flash->message}
								</div>
							{/if}
						</div>
					</div>
				{/snippet}
			</div><!-- /.container-fluid -->
		</section>

		<!-- Main content -->
		<section class="content ml-2 mr-2">
			{include content}
		</section>
		<!-- /.content -->
	</div>
	<!-- /.content-wrapper -->
{/define}

